{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "allowJs": true,
    "checkJs": true,
    "sourceMap": true,
    "module": "NodeNext",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
